<launch>

    <arg name="description" default="_all"/>
    <arg name="hwil" default="true"/>
    <arg name="use_decoded" default="true"/>

    <node pkg="can_to_ros" type="vehicle_interface" name="vehicle_interface" output="screen" />

    <node pkg="can_to_ros" type="subs_nissan_side_radar" name="subs_nissan_side_radar" output="screen" if="$(eval arg('hwil') == 'true' and arg('use_decoded') == 'false')"/>

    <node pkg="can_to_ros" type="subs_nissan_side_radar_decoded" name="subs_nissan_side_radar_decoded" output="screen" if="$(eval arg('hwil') == 'true' and arg('use_decoded') == 'true')"/>

    <node pkg="can_to_ros" type="node_status.py" name="node_status" output="screen" />

    <node pkg="can_to_ros" type ="rosbag_record.sh" name="bashscript1" output="screen" args="$(arg description) $(arg hwil)"/> 

</launch>
